@{
    ViewBag.Title = "推送SAP历史记录";
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
}

<script>
    $(function () {
        gridList();
    })
    function gridList() {
        var url=""
        if (@ViewBag.id== 1) {
           url  = "/Hrm/AskForLeave/GetHistoryRecord/";//科室主任审批
        }
        else {
             url = "/Hrm/AskForLeave/GetHistoryBJRecord/";//保健审批
        }

        var $gridList = $("#gridList");
        $gridList.dataGrid({
            url: url,
            height: $(window).height() - 128,
            colModel: [
                { label: '主键', name: 'F_Id', hidden: true },
                { label: '考勤员', name: 'F_RealName', width: 80, align: 'left' },

                {
                    label: '考勤部门', name: 'F_FullName', width: 80, align: 'left'
                },

                {
                    label: '考勤时间', name: 'F_CreatorTime', width: 80, align: 'left',
                    formatter: "date", formatoptions: { srcformat: 'Y-m-d', newformat: 'Y-m-d' }
                },
            ],
            pager: "#gridPager",
            sortname: 'F_CreatorTime desc',
            viewrecords: true
        });
        $("#btn_search").click(function () {
            $gridList.jqGrid('setGridParam', {
                postData: { keyword: $("#txt_keyword").val()},
            }).trigger('reloadGrid');
        });
    }


</script>

