@{
    ViewBag.Title = "请假";
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
}

<script>
    $(function () {
        gridList();
    })
    function gridList() {
        var $gridList = $("#gridList");
        $gridList.dataGrid({
            url: "/Hrm/AskForLeave/GetGridJson/@ViewBag.id",
            height: $(window).height() - 128,
            colModel: [
                { label: '主键', name: 'F_Id', hidden: true },
                { label: '人员编号', name: 'PERNR', width: 80, align: 'left' },
                { label: '姓名', name: 'NACHN', width: 80, align: 'left' },

                {
                    label: '请假类型', name: 'F_ItemName', width: 80, align: 'left'
                },

                {
                    label: '请假开始时间', name: 'StartDate', width: 80, align: 'left',
                    formatter: "date", formatoptions: { srcformat: 'Y-m-d', newformat: 'Y-m-d' }
                },
                {
                    label: '请假结束时间', name: 'EndDate', width: 80, align: 'left',
                    formatter: "date", formatoptions: { srcformat: 'Y-m-d', newformat: 'Y-m-d' }
                },


                {
                    label: '性别', name: 'GESCTXT', width: 80, align: 'left'
                },
                {
                    label: '员工工号', name: 'YGGH', width: 80, align: 'left'
                },
                {
                    label: '备注', name: 'F_Description', width: 80, align: 'left'
                },{
                    label: '状态', name: 'State', width: 80, align: 'left',
                    formatter: function (cellvalue, options, rowObject) {
                        if (cellvalue == "1") {
                            return '未提交';
                        } else if (cellvalue == "2") {
                            return '已提交';
                        } else if (cellvalue == "3") {
                            return '已审核';
                        }else {
                            return '已发送SAP';
                        }
                    }
                }, {
                    label: '是否有效', name: 'IsNew', width: 80, align: 'left',
                    formatter: function (cellvalue, options, rowObject) {
                        if (cellvalue == true) {
                            return '是';
                        } else {
                            return '否';
                        }
                    }
                }, {
                    label: '序列值', name: 'AskSort', width: 80, align: 'left'
                }

            ],
            pager: "#gridPager",
            sortname: 'F_CreatorTime desc',
            viewrecords: true
        });
        $("#btn_search").click(function () {
            $gridList.jqGrid('setGridParam', {
                postData: { keyword: $("#txt_keyword").val(),id:@ViewBag.id },
            }).trigger('reloadGrid');
        });
    }
    function btn_add() {
        $.modalOpen({
            id: "Form",
            title: "新增请假",
            url: "/hrm/askforleave/Form",
            width: "700px",
            height: "510px",
            callBack: function (iframeId) {
                top.frames[iframeId].submitForm();
            }
        });
    }
    function btn_edit() {
        var keyValue = $("#gridList").jqGridRowValue().F_Id;
        var IsNew = $("#gridList").jqGridRowValue().IsNew;
        var State = $("#gridList").jqGridRowValue().State;

        if (IsNew == "否") {
            $.modalAlert("此记录已经做过请假改登，不能编辑", "warning");
            return false;
        }
        if (IsNew == "否") {
            $.modalAlert("此记录已经做过请假改登，不能编辑", "warning");
            return false;
        }
        if (State != "未提交") {
            $.modalAlert("此记录已经提交，不能编辑", "warning");
            return false;
        }
        $.modalOpen({
            id: "Form",
            title: "修改请假",
            url: "/hrm/askforleave/Form?keyValue=" + keyValue,
            width: "700px",
            height: "510px",
            callBack: function (iframeId) {
                top.frames[iframeId].submitForm();
            }
        });
    }
    function btn_delete() {
        var IsNew = $("#gridList").jqGridRowValue().IsNew;
        var State = $("#gridList").jqGridRowValue().State;

        if (IsNew == "否") {
            $.modalAlert("此记录已经做过请假改登，不能删除", "warning");
            return false;
        }
        if (IsNew == "否") {
            $.modalAlert("此记录已经做过请假改登，不能删除", "warning");
            return false;
        }
        if (State != "未提交") {
            $.modalAlert("此记录已经提交，不能编辑", "warning");
            return false;
        }
        $.deleteForm({
            url: "/hrm/askforleave/DeleteForm",
            param: { keyValue: $("#gridList").jqGridRowValue().F_Id },
            success: function () {
                $.currentWindow().$("#gridList").trigger("reloadGrid");
            }
        })
    }
    function btn_Submit() {
        //var IsNew = $("#gridList").jqGridRowValue().IsNew;
        var State = $("#gridList").jqGridRowValue().State;
        //if (IsNew == false) {
        //    $.modalAlert("此记录已经做过请假改登，不能删除", "warning");
        //    return false;
        //}
        //if (IsNew == false) {
        //    $.modalAlert("此记录已经做过请假改登，不能删除", "warning");
        //    return false;
        //}
        if (State != "未提交") {
            $.modalAlert("此记录已经提交，无需重复提交", "warning");
            return false;
        }
        $.deleteForm({
            prompt: "注：您确定要提交该项数据吗？",
            loading: "正在提交数据...",
            url: "/hrm/askforleave/SubmitLeave",
            param: { keyValue: $("#gridList").jqGridRowValue().F_Id },
            success: function () {
                $.currentWindow().$("#gridList").trigger("reloadGrid");
            }
        })
    }
    function btn_details() {
        var keyValue = $("#gridList").jqGridRowValue().F_Id;
        $.modalOpen({
            id: "Details",
            title: "查看用户",
            url: "/hrm/askforleave/Details?keyValue=" + keyValue,
            width: "700px",
            height: "550px",
            btn: null,
        });
    }
    function btn_SubmitChange() {//
        var IsNew = $("#gridList").jqGridRowValue().IsNew;
        var State = $("#gridList").jqGridRowValue().State;
        if (IsNew == "否") {
            $.modalAlert("此记录已经做过请假改登，不能继续改登", "warning");
            return false;
        }
        //if (IsNew == false) {
        //    $.modalAlert("此记录已经做过请假改登，不能删除", "warning");
        //    return false;
        //}
        if (State != "未提交") {
            $.modalAlert("此记录已经提交，无需重复提交", "warning");
            return false;
        }
        $.deleteForm({
            prompt: "注：您确定要提交该项数据吗？",
            loading: "正在提交数据...",
            url: "/hrm/askforleave/SubmitLeave",
            param: { keyValue: $("#gridList").jqGridRowValue().F_Id },
            success: function () {
                $.currentWindow().$("#gridList").trigger("reloadGrid");
            }
        })
    }
</script>

