    }
    $.messager.confirm('操作提示', "确认这 " + arr.length + " 项"+msg2,
    function(r) {
        if (r) {
            $.post("<%: Url.Content("~/System/MDM/OpenAndCloseYH")%>", {
                query: arr.join(","),
