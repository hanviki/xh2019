function flexiSaveYS(flag)
{
   var rows = $('#flexigridData').datagrid('getSelections');
    if (rows.length == 0) {
        $.messager.alert('操作提示', '请选择数据!', 'warning');
        return false;
    }
    var msg1="：已经放开验收合格证书上传";
    if(flag==0)
